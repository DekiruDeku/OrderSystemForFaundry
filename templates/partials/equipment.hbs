<section class="equipment">
    <section class="MainWeapon">
        <h2>Основное Оружие</h2>
        {{#each weapons as |meleeweapon id|}}
        {{#if (eq data.main true)}}
                {{> "systems/Order/templates/partials/weapon-card.hbs" meleeweapon}}
        {{/if}}
        {{/each}}
    </section>
    <div class="SecondaryWeapon">
        <h2>Вторичное Оружие</h2>
        {{#each weapons as |meleeweapon id|}}
        {{#if (eq data.secondary true)}}
                {{>/Order/ "systemstemplates/partials/weapon-card.hbs" weapon}}
        {{/if}}
        {{/each}}
    </div>
    <div class="ColdArmsWeapon">
        <h2>Холодное оружие</h2>
        {{#each weapons as |meleeweapon id|}}
        {{#if (eq data.coldarms true)}}
                {{> "systems/Order/templates/partials/weapon-card.hbs" weapon}}
        {{/if}}
        {{/each}}
    </div>
</section>
