<section class="equipment">
  <section class="MainWeapon">
    <h2>Основное Оружие</h2>
    {{#each weapons as |weapon id|}}
      {{#if (isWeaponSlot weapon.system.weaponType 'main')}}
        {{> "systems/Order/templates/partials/weapon-card.hbs" weapon}}
      {{/if}}
    {{/each}}
  </section>

  <div class="SecondaryWeapon">
    <h2>Вторичное Оружие</h2>
    {{#each weapons as |weapon id|}}
      {{#if (isWeaponSlot weapon.system.weaponType 'secondary')}}
        {{> "systems/Order/templates/partials/weapon-card.hbs" weapon}}
      {{/if}}
    {{/each}}
  </div>

  <div class="MeleeWeapon">
    <h2>Холодное Оружие</h2>
    <button type="button" class="roll-improvised-attack os-small-btn">Импровизированная атака</button>
    {{#each weapons as |weapon id|}}
      {{#if (isWeaponSlot weapon.system.weaponType 'melee')}}
        {{> "systems/Order/templates/partials/weapon-card.hbs" weapon}}
      {{/if}}
    {{/each}}
  </div>

  <div class="Armor">
    <h2>Броня</h2>
    {{#each armors as |armor id|}}
      {{#if (eq armor.system.isUsed true)}}
        {{> "systems/Order/templates/partials/armor-card.hbs" armor}}
      {{/if}}
    {{/each}}
  </div>
</section>
