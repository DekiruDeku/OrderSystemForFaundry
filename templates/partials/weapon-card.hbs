<div class="weapon-card">
  <div class="header">
    <div class="title">
      <h1>{{name}}</h1>
      <span class="level">{{level}} УР.</span>
    </div>
  </div>
  <div class="image">
    <img src="{{image}}" alt="{{name}}">
  </div>
  <div class="info">
    <h2>{{type}}</h2>
    <p>{{description}}</p>
  </div>
</div>
