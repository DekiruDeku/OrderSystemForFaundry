<h1>Способности</h1>
<div class="skills-circle-groups">
  {{#each SkillCircleGroups as |group|}}
    <div class="skills-circle-group" data-circle="{{group.circle}}">
      <div class="skills-grid">
        {{#each group.items as |Skill id|}}
          {{> "systems/Order/templates/partials/skill-card.hbs" Skill}}
        {{/each}}

        {{#let "m" (mod group.items.length 3)}}
          {{#if (gt m 0)}}
            {{#each (range 0 (sub 3 m)) as |i|}}
              <div class="skill-card empty"></div>
            {{/each}}
          {{/if}}
        {{/let}}
      </div>
    </div>
  {{/each}}
</div>

