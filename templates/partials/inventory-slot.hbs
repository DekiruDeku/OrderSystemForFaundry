<div class="inventory-slot {{slotType}} {{#if empty}}empty{{/if}}" {{#if item}}data-item-id="{{item._id}}"{{/if}}>
  {{#if item}}
    <img class="inventory-icon" src="{{item.img}}" alt="{{item.name}}">
    <div class="inventory-tooltip">
      <p>{{item.name}}</p>
      {{#if item.system.Description}}
        <p>{{item.system.Description}}</p>
      {{/if}}
      {{#if item.system.Damage}}
        <p><strong>Урон:</strong> {{item.system.Damage}}</p>
      {{/if}}
      {{#if item.system.Range}}
        <p><strong>Дистанция:</strong> {{item.system.Range}}</p>
      {{/if}}
    </div>
  {{/if}}
</div>
