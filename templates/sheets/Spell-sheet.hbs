<form class="{{cssClass}} skill" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}" />
        </h1>
    </header>
    <div class="skill-level">
  <canvas 
    class="circle-progress-skill" 
    data-circle="{{data.Circle}}" 
    data-level="{{data.Level}}" 
    data-filled="{{data.filledSegments}}"
  ></canvas>
</div>


    <div class="sheet">
        <table>
            <tr>
                <th>{{localize "Order.spell.Damage"}}</th>
                <th>{{localize "Order.spell.Range"}}</th>
                <th>{{localize "Order.spell.EffectThreshold"}}</th>
                <th>{{localize "Order.spell.Level"}}</th>
                <th>{{localize "Order.spell.TypeOFAbility"}}</th>
                <th>{{localize "Order.spell.Description"}}</th>
                <th>{{localize "Order.spell.Cooldown"}}</th>
            </tr>
            <td>
                <input name="data.Damage" type="text" value="{{data.Damage}}" data-type="Number" />
            </td>
            <td>
                <input name="data.Range" type="text" value="{{data.Range}}" data-type="Number" />
            </td>
            <td>
                <input name="data.EffectThreshold" type="text" value="{{data.EffectThreshold}}" data-type="Number" />
            </td>
            <td>
                <input name="data.Level" type="text" value="{{data.Level}}" data-type="Number" />
            </td>
            <td>
                <input name="data.TypeOFAbility" type="text" value="{{data.TypeOFAbility}}" data-type="String" />
            </td>
             <td>
                <input name="data.Description" type="text" value="{{data.Description}}" data-type="String" />
            </td>
             <td>
                <input name="data.LevelOfFatigue" type="text" value="{{data.LevelOfFatigue}}" data-type="Number" />
            </td>
            <td>
                <input name="data.Multiplier" type="text" value="{{data.Multiplier}}" data-type="String" />
            </td>
        </table>
    </div>
</form>